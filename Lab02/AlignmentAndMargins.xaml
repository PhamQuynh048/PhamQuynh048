<Page
    x:Class="Lab02.AlignmentAndMargins"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Lab02"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="Black" Margin="0,10,10,0">
        <Rectangle Fill="Blue"
                   Height="100"
                   Width="100"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"/>

        <Rectangle Fill="Yellow"
                   Height="100"
                   Width="100"  Margin="100,100,1300,800"/>
        <Rectangle Fill="Green"
                   Height="100"
                   Width="100" 
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top" Margin="125,362,0,0" RenderTransformOrigin="0.559,1.207"/>
        <Rectangle Fill="White"
                   Height="100"
                   Width="100" 
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top" Margin="50,712,0,0" RenderTransformOrigin="1.869,1.988"/>
        <Rectangle Fill="Red"
                   Height="100"
                   Width="100" 
                   HorizontalAlignment="Right"
                   VerticalAlignment="Bottom"/>

    </Grid>
</Page>
